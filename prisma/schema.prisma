// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id          Int     @id @default(autoincrement())
    name        String?
    headline    String
    description String
    email       String  @unique
    github      String  @unique
    linkedin    String  @unique
    resume      String  @unique
}

model Project {
    id        Int     @id @default(autoincrement())
    title     String
    slug      String  @unique
    summary   String?
    goal      String?
    outcome   String?
    published Boolean @default(false)
    skills    Skill[]
}

model Skill {
    id         Int     @id @default(autoincrement())
    name       String
    experience Int
    projectId  Int
    Project    Project @relation(fields: [projectId], references: [id])

    @@index([projectId])
}
